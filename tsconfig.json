{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2015",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "vueCompilerOptions": {
    "target": 2
  },
  "include": [
    "vite.config.*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "node_modules/vue/*.d.ts" // 添加这一行
  ]
}